<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:vm="clr-namespace:TimeManagementAppGui.ViewModel"
             xmlns:local="clr-namespace:TimeManagementAppGui"
             xmlns:scheduler="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             xmlns:schedulerOld="clr-namespace:DevExpress.Maui.Scheduler;assembly=DevExpress.Maui.Scheduler"
             x:Class="TimeManagementAppGui.MonthView">
    <ContentView.BindingContext>
        <vm:SchedulerViewModel></vm:SchedulerViewModel>
    </ContentView.BindingContext>
    <VerticalStackLayout>
        <Label Text="{Binding Month, StringFormat='{0:MMMM}'}" x:Name="MonthButton"  HorizontalTextAlignment="Center" BackgroundColor="WhiteSmoke" TextColor="Black"></Label>
        <Button Clicked="Button_Clicked" Text="Next month"></Button>
        <schedulerOld:MonthView x:Name="MonthScheduler">
        </schedulerOld:MonthView>
        <!--<scheduler:DXCalendar ShowTrailingDays="True" FirstDayOfWeek="Monday" x:Name="MainCalendar" />-->

    </VerticalStackLayout>
</ContentView>