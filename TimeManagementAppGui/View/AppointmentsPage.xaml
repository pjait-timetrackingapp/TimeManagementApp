<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxcv="clr-namespace:DevExpress.Maui.CollectionView;assembly=DevExpress.Maui.CollectionView"
             x:Class="TimeManagementAppGui.View.AppointmentsPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Name="Page">
    <Grid>
        <VerticalStackLayout>
            <dxcv:DXCollectionView x:Name="collectionView" SelectionMode="Single" SelectedItem="{Binding SelectedTimeEntry, Mode=TwoWay}">
                <dxcv:DXCollectionView.Behaviors>
                    <toolkit:EventToCommandBehavior 
                    EventName="SelectionChanged" 
                    Command="{Binding SelectionChangedCommand}"/>
                </dxcv:DXCollectionView.Behaviors>
                <dxcv:DXCollectionView.ItemTemplate x:FactoryMethod="New">
                    <DataTemplate>
                        <StackLayout Padding="18,1,18,7">
                            <Label Text="{Binding TimeEntry.Description}"
                           Margin="0,2"
                           TextColor="#55575c"/>
                            <Label Text="{Binding TimeEntry.DateStarted, StringFormat='{0:dddd, dd MMMM yyyy HH:mm}'}"
                               TextColor="#959aa0"/>
                        </StackLayout>
                    </DataTemplate>
                </dxcv:DXCollectionView.ItemTemplate>
                <dxcv:DXCollectionView.SelectedItemTemplate>
                    <DataTemplate>
                        <Border Margin="10, 1"
                            Padding="0"
                            Stroke="Orange"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
                            StrokeThickness="2"
                            StrokeShape="RoundRectangle 10">
                            <StackLayout Padding="18,1,18,7">
                                <Label Text="{Binding TimeEntry.Description}"
                                Margin="0,2"
                                TextColor="#55575c"/>
                                <Label Text="{Binding TimeEntry.DateStarted, StringFormat='{0:dddd, dd MMMM yyyy HH:mm}'}"
                                TextColor="#959aa0"/>
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </dxcv:DXCollectionView.SelectedItemTemplate>
            </dxcv:DXCollectionView>
        </VerticalStackLayout>
        <Button
                Grid.Row="0"
                CornerRadius="35"
                HeightRequest="55"
                WidthRequest="55"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,0,16,16"
                Text="-"
                Command="{Binding RemoveSelectedItem}"
                IsVisible="{Binding IsFabVisible}"/>
    </Grid>
</ContentPage>