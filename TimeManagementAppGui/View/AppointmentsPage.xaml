<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxcv="clr-namespace:DevExpress.Maui.CollectionView;assembly=DevExpress.Maui.CollectionView"
             x:Class="TimeManagementAppGui.View.AppointmentsPage"
             x:Name="Page">
    <VerticalStackLayout>
        <!--<Label HorizontalTextAlignment="Center" FontSize="18" FontAttributes="Bold" x:Name="HeaderDate"/>-->
        <dxcv:DXCollectionView x:Name="collectionView" SelectionMode="Single">
            <dxcv:DXCollectionView.ItemTemplate x:FactoryMethod="New">
                <DataTemplate>
                    <StackLayout Padding="18,1,18,7">
                        <Label Text="{Binding Subject}"
                           Margin="0,2"
                           TextColor="#55575c"/>
                        <Label Text="{Binding Start, StringFormat='{0:dddd, dd MMMM yyyy HH:mm}'}"
                               TextColor="#959aa0"/>
                    </StackLayout>
                </DataTemplate>
            </dxcv:DXCollectionView.ItemTemplate>
        </dxcv:DXCollectionView>
    </VerticalStackLayout>
</ContentPage>