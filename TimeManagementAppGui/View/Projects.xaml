<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeManagementAppGui.View.Projects"
             xmlns:dxcv="clr-namespace:DevExpress.Maui.CollectionView;assembly=DevExpress.Maui.CollectionView"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Projects">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+" Command="{Binding AddProjectCommand}"/>
    </ContentPage.ToolbarItems>
    <Grid>
        <VerticalStackLayout>
            <dxcv:DXCollectionView x:Name="projectsView" SelectionMode="Single" SelectedItem="{Binding SelectedProject, Mode=TwoWay}" ItemsSource="{Binding Projects}">
                <dxcv:DXCollectionView.Behaviors>
                    <toolkit:EventToCommandBehavior 
                        EventName="SelectionChanged" 
                        Command="{Binding ProjectSelectionChangedCommand}"/>
                </dxcv:DXCollectionView.Behaviors>
                <dxcv:DXCollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <StackLayout Padding="18,1,18,7" HeightRequest="60">
                                <Label Text="{Binding ProjectName}" Margin="0,10,0,0" FontSize="Subtitle" FontAttributes="Bold"
                               TextColor="#55575c"/>
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </dxcv:DXCollectionView.ItemTemplate>
                <dxcv:DXCollectionView.SelectedItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="18,1,18,7" HeightRequest="60"
                                         BackgroundColor="{StaticResource Primary}">
                            <Label Text="{Binding ProjectName}" Margin="0,10,0,0" FontSize="Subtitle" FontAttributes="Bold"
                                   TextColor="{StaticResource White}"/>
                        </StackLayout>
                    </DataTemplate>
                </dxcv:DXCollectionView.SelectedItemTemplate>
            </dxcv:DXCollectionView>
        </VerticalStackLayout>
        <Button
                Grid.Row="0"
                CornerRadius="35"
                HeightRequest="55"
                WidthRequest="55"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,0,16,16"
                Text="-"
                FontAttributes="Bold"
                Command="{Binding RemoveSelectedProjectCommand}"
                IsVisible="{Binding IsProjectFabVisible}"/>

        <Button
                Grid.Row="0"
                CornerRadius="16"
                HeightRequest="56"
                WidthRequest="100"
                HorizontalOptions="Start"
                VerticalOptions="End"
                Margin="16,0,0,16"
                Text="Szczegóły"
                FontAttributes="Bold"
                Command="{Binding ProjectDetailsCommand}"
                IsVisible="{Binding IsProjectFabVisible}"/>
    </Grid>
</ContentPage>