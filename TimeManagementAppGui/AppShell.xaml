<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TimeManagementAppGui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TimeManagementAppGui" CompressedLayout.IsHeadless="True"
    xmlns:views="clr-namespace:TimeManagementAppGui.View"
    xmlns:controls="clr-namespace:TimeManagementAppGui.Controls">

    <Shell.FlyoutHeader>
        <controls:FlyoutHeader />
    </Shell.FlyoutHeader>
    
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent 
            Title="Kalendarz"
            ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent 
            Title="Pracodawcy"
            ContentTemplate="{DataTemplate views:Employers}"/>
        <ShellContent 
            Title="Projekty"
            ContentTemplate="{DataTemplate views:Projects}"/>
        <ShellContent 
            Title="Ustawienia"
            ContentTemplate="{DataTemplate views:Settings}"/>
    </FlyoutItem>
</Shell>
